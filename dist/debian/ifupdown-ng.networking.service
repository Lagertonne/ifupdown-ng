[Unit]
Description=ifupdown-ng networking initialization
Documentation=man:interfaces(5) man:ifup(8) man:ifdown(8)

[Service]
Type=oneshot
RemainAfterExit=yes
SyslogIdentifier=networking
TimeoutStopSec=30s
ExecStart=/usr/local/sbin/ifupdown-ng/networking start
ExecStop=/usr/sbin/ifupdown-ng/networking stop
ExecRestart=/usr/sbin/ifupdown-ng/networking restart

[Install]
WantedBy=basic.target network.target multi-user.target network-online.target
